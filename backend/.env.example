# EvalPoint Educational Platform Backend Environment Variables
# Copy this file to .env and update the values for your environment

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/evalpoint

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# Educational Platform Configuration
SUPPORT_EMAIL=support@evalpoint.com
PLATFORM_NAME=EvalPoint Educational Platform

# Security Configuration (optional)
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

# Rate Limiting (optional - defaults are set in code)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_MAX=5
REGISTRATION_RATE_LIMIT_MAX=3

# CORS Configuration (optional - for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://evalpoint.com

# Email Configuration (for future email verification features)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Logging Configuration (optional)
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring Configuration (optional)
# SENTRY_DSN=your-sentry-dsn-here
# ANALYTICS_KEY=your-analytics-key-here